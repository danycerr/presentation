\begin{column}{0.7\textwidth}
\ \\
\vspace{0.2cm}
\begin{align*}
& h_b(t=0)=5000m\\
& D  =10^{-10} m^2/s \\
& C (t=0) = -\frac{(0.4-0.1)}{h_b}z + 0.1\\ 
& C (z_a, t) =0, \partial C / \partial z | _{z_b} =0\\
& dt = 0.3 y , \quad \Delta t =10 y\\
& h_s=500 m , 2000 m , \frac{2000}{\Delta t}t 
\end{align*}
\end{column}
}
\end{columns}
